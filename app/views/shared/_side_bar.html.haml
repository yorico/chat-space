.side-bar
  .notification

  .side-bar__user
    .side-bar__user-content
      .side-bar__user-name
        = current_user.name

      = link_to new_group_path, class: "side-bar__user--new-group" do
        = fa_icon 'pencil-square-o'

      = link_to edit_user_path(current_user), class: "side-bar__user--edit-user" do
        = fa_icon 'cog'

  .side-bar__groups
    .side-bar__groups-list
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .side-bar__group
            .side-bar__group-name
              = group.name

            .side-bar__group-message
              = group.show_last_message
